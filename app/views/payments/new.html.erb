<div class="" style="display: flex; width: 90%; margin: 0px auto;">
  <div style="width: 50%;">
    <h1>Checkout Summary</h1>
    <div>
      <h5><i class="fas fa-user"></i>Order Contact Info</h5>
      <%= render 'contact_form' %>
    </div>

    <div>
      <h5><i class="fas fa-map-pin"></i>Delivery Info</h5>
      <%= render 'address_form' %>
    </div>
  </div>

<div style="width: 40%">
      <p>Purchase of <strong><%= @order.quantity %> food items</strong> for <strong><%= humanized_money_with_symbol @order.amount %></strong></p>
      <button id="pay" class="btn btn-primary">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>


</div>






</div>

<div class="container">
  <div class="row py-4">
    <div class="col">

    </div>
  </div>
</div>
